{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Playwright Test (current file)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/@playwright/test/cli.js",
      "args": ["test", "${file}", "--headed", "--debug"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "autoAttachChildProcesses": true
    }
  ]
}
